{
    "pipeline": {
      "name": "LogD ingestion"
    },
    "transform": {
      "image": "snapple49/logd_ingester:latest",
      "cmd": [ "/bin/bash" ],
      "stdin": [
        "python3 data_ingestion.py"
      ]
    },
    "standby": true,
    "resource_limits": {
      "memory": "2.0G",
      "cpu": 2
    },
    "resource_requests": {
        "memory" : "1.0G",
        "cpu": 1
    },
    "cross": [
      {
        "atom": {
          "repo": "data",
          "glob": "/"
        }
      },
      {
        "atom": {
          "repo": "input",
          "glob": "/"
        }
      }
    ]
  }