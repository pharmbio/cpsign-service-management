{
    "input": {
        "cross": [
            {
                "atom": {
                    "glob": "/training/*",
                    "repo": "LogD-ingestion"
                }
            },
            {
                "atom": {
                    "glob": "/",
                    "repo": "LogD-precompute"
                }
            }
        ]
    },
    "parallelism_spec": {
        "constant": 5
    },
    "pipeline": {
        "name": "LogD-training"
    },
    "resource_limits": {
        "cpu": 2,
        "memory": "20G"
    },
    "resource_requests": {
        "cpu": 1,
        "memory": "12G"
    },
    "standby": true,
    "transform": {
        "cmd": [
            "/bin/bash"
        ],
        "image": "pharmbio/cpsign-docker:c0.7.7",
        "secrets": [
            {
                "mount_path": "/mnt/lic/",
                "name": "cpsign-license"
            }
        ],
        "stdin": [
            "mkdir -p /pfs/out/logs",
            "touch /pfs/out/logs/stdout.txt",
            "echo '\n-------------\n' >> /pfs/out/logs/stdout.txt",
            "export PARAMS_FILE=/pfs/LogD-ingestion/training/$(ls /pfs/LogD-ingestion/training/)",
            "java -jar -Xmx16G cpsign-0.7.7.jar train --license /mnt/lic/license @$PARAMS_FILE >> /pfs/out/logs/stdout.txt"
        ]
    }
}
