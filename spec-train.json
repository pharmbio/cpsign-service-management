{
    "input": {
        "atom": {
            "glob": "/",
            "repo": "LogD-ingestion"
        }
    },
    "pipeline": {
        "name": "LogD-training"
    },
    "resource_limits": {
        "cpu": 2,
        "memory": "16G"
    },
    "resource_requests": {
        "cpu": 1,
        "memory": "8G"
    },
    "standby": true,
    "transform": {
        "cmd": [
            "/bin/bash"
        ],
        "image": "pharmbio/cpsign-docker:c0.6.16",
        "secrets": [
            {
                "mount_path": "/mnt/lic/",
                "name": "logd-license"
            }
        ],
        "stdin": [
            "mkdir -p /pfs/out/logs",
            "touch /pfs/out/logs/stdout.txt",
            "java -jar -XX:+UnlockExperimentalVMOptions -XX:+UseCGroupMemoryLimitForHeap cpsign-0.6.16.jar train --license /mnt/lic/license @/pfs/LogD-ingestion/input/params.txt > /pfs/out/logs/stdout.txt"
        ]
    }
}
