{
    "input": {
        "atom": {
            "glob": "/",
            "repo": "hERG-ingestion"
        }
    },
    "pipeline": {
        "name": "hERG-precompute"
    },
    "resource_limits": {
        "cpu": 4,
        "memory": "8G"
    },
    "resource_requests": {
        "cpu": 2,
        "memory": "2G"
    },
    "standby": false,
    "transform": {
        "cmd": [
            "/bin/bash"
        ],
        "image": "pharmbio/cpsign-docker:c0.7.12",
        "secrets": [
            {
                "mount_path": "/mnt/lic/",
                "name": "cpsign-license"
            }
        ],
        "stdin": [
            "java -jar cpsign-0.7.12.jar precompute --license /mnt/lic/license @/pfs/hERG-ingestion/precompute/params.txt > /pfs/out/stdout.txt"
        ]
    }
}
